generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String @id @default(uuid())
  pesosAmount   Float
  dollarsAmount Float
  usdPrice      Float
  type      TransactionType
  date      DateTime

  userId   String

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum TransactionType {
  BUY
  SELL
}
